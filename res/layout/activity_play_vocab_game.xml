<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayVocabGameActivity" >

    <Button
        android:id="@+id/btnSayword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Give me the word" />

    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignBaseline="@+id/btnSayword"
        android:layout_alignBottom="@+id/btnSayword"
        android:layout_toRightOf="@+id/btnSayword"
        android:text="Repeat the word" />
    
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignBaseline="@+id/btnRepeat"
        android:layout_alignBottom="@+id/btnRepeat"
        android:layout_toRightOf="@+id/btnRepeat"
        android:text="Restart game" />
    
    <EditText
        android:id="@+id/txtSplng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSayword"
        android:layout_alignRight="@+id/btnRestart"
        android:layout_below="@+id/btnRepeat"
        android:layout_marginTop="15dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnChkSplng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSplng"
        android:layout_alignRight="@+id/txtSplng"
        android:layout_below="@+id/txtSplng"
        android:layout_marginTop="15dp"
        android:text="Did I spell it right?" />
    
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChkSplng"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>