<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <EditText
        android:id="@+id/txtWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAddWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtWord"
        android:layout_alignRight="@+id/txtWord"
        android:layout_below="@+id/txtWord"
        android:layout_marginTop="50dp"
        android:text="Add the word to the list" />

    <Button
        android:id="@+id/btnAdjustWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAddWord"
        android:layout_alignRight="@+id/btnAddWord"
        android:layout_below="@+id/btnAddWord"
        android:text="Make this the current word" />

    <Button
        android:id="@+id/btnClearFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAdjustWord"
        android:layout_alignRight="@+id/btnAdjustWord"
        android:layout_below="@+id/btnAdjustWord"
        android:layout_marginTop="80dp"
        android:text="Create new list" />

</RelativeLayout>